.sliceContainer
  background var(--ghostZ)
  position relative
  margin 0px 6px 12px 6px
  border-radius 12px
  padding 3px 0px 3px 0px
  font-size 14px
  font-weight 300

  .sliceContainerClose
    cursor pointer
    height 16px
    display flex
    justify-content center
    align-items center
    border-radius 8px
    color black
    div
      pointer-events none
      position relative
      margin 0px 18px
      top 2px

  .sliceContainerClose:hover
    color var(--white)

  .sliceTileCenter
    justify-content center

  .sliceTile
    cursor pointer
    display flex
    justify-content space-between
    align-items center
    transition var(--standardFast)
    transform translateZ(0)
    // margin 3px 3px 0px 3px
    transform scale(1)
    background var(--ghostA)
    position relative
    border-radius 9px
    height 42px
    box-sizing border-box
    font-size 12px
    font-weight 300
    *
      pointer-events none

    .sliceTileConnectionName
      padding 0px 39px
      color var(--outerspace)
      text-transform uppercase
      font-size 13px
      font-weight 400
      letter-spacing 1px

    .sliceTileBlock
      display flex
      align-items center
      padding-right 11px
      font-family FiraCode, monospace
      font-size 14px
      font-weight 600
      position relative
      top 1px
      bottom 0px

      .sliceTileBlockIcon
        color var(--good)
        padding-right 5px

      .sliceTileChainId
        padding-right 15px

    .sliceTileIndicator
      color var(--outerspace)
      cursor pointer
      position absolute 
      top 50%
      margin-top -2px
      left 13px
      bottom 0px
      width 5px
      height 5px
      border-radius 3px
      display flex
      justify-content center
      align-items center
      border-radius 12px
      background var(--good)
      *
        pointer-events none


    .sliceTileIndicatorLarge
      color var(--outerspace)
      cursor pointer
      position absolute 
      top 50%
      margin-top -5px
      left 14px
      bottom 0px
      width 10px
      height 10px
      border-radius 4px
      display flex
      justify-content center
      align-items center
      border-radius 12px
      background var(--good)
      *
        pointer-events none

    .sliceTileIndicatorActive
      background var(--goodHighlight)
      box-shadow 0px 0px 4px var(--goodHighlight)

    .sliceTileIndicatorGood
      background var(--good)
      box-shadow 0px 0px 4px var(--good)

    .sliceTileIndicatorPending
      background var(--pending)
      box-shadow 0px 0px 4px var(--pending)

    .sliceTileIndicatorBad
      background var(--bad)
      box-shadow 0px 0px 4px var(--bad)

    .sliceTileChangeChain
      color var(--outerspace)
      cursor pointer
      position absolute 
      top 0px
      right 0px
      bottom 0px
      width 41px
      display flex
      justify-content center
      align-items center
      border-radius 12px
      *
        pointer-events none

    .sliceTileChangeChain:hover
      background var(--ghostB)

    .sliceTileChangeConnected
      background var(--good)

    .sliceChainId
      display flex
      justify-content center
      align-items center
      font-family FiraCode, monospace
      font-size 12px
      margin 10px

      .sliceChainIdIcon
        margin-right 6px

  .sliceTile:first-child
    margin 0px 3px 0px 3px

  .sliceTileHighlight
    background var(--ghostB)

  .sliceTileClickable:hover
    background var(--ghostB)
    box-shadow 0px 2px 2px var(--ghostZ)
    // animation 4s shake ease-in-out infinite alternate

  .sliceTileClickable:active
    transform translateY(0px)
    // animation-name shake-little
    // animation-duration 2s
    // animation-timing-function: ease-in-out
    // animation-iteration-count: infinite
    // box-shadow 0px 1px 1px var(--ghostZ)

.sliceContainer:last-child
  margin 0px 6px 0px 6px







.sliceTileGasPrice
  display flex
  justify-content center
  align-items center
  justify-content center

  .sliceTileGasPriceIcon
    margin 0px 13px 0px 15px
    color var(--good)

  .sliceTileGasPriceNumber
    margin 0px 3px 0px 0px
    font-family 'FiraCode', monospace
    font-weight 100
    font-size 20px
    letter-spacing -1px
    
  .sliceTileGasPriceUnit
    margin 0px 0px 2px 0px
    text-transform uppercase
    font-size 8px
    font-weight 600

.sliceGasBlock
  position relative
  display flex
  border-radius 8px
  padding 24px 0px 20px 0px

  .feeToolTip
    background var(--ghostB)
    position absolute 
    left 125px
    bottom 0
    top 0px
    right 0px
    z-index 220
    border-radius 8px
    padding 10px
    font-size 10px
    font-weight 400
    pointer-events none
    display flex
    justify-content center
    align-items center
    text-align center
    line-height 13px
    box-shadow 0px 20px 10px -10px var(--ghostZ)
    animation 8s shake ease-in-out infinite alternate

  .feeToolTipPriority
    left 0
    right 125px

  .gasBlockTag
    position absolute
    top 0px
    left 2px
    right 2px
    height 24px
    display flex
    justify-content center
    font-size 10px
    font-weight 600
    text-transform uppercase
    letter-spacing 1px
    color var(--good)
    text-align center
    display none

  .gasItem
    position relative
    display flex
    justify-content center
    align-items center
    flex-direction column
    height 56px
    padding 12px 10px 8px 10px
    box-sizing border-box

    .gasArrowNotify
      position absolute
      top 17px
      left -4px
      height 17px
      width 17px
      border-radius 8px
      background var(--ghostB)
      z-index 4
      font-size 12px
      line-height 10px
      padding 4px 0px 0px 5px
      box-sizing border-box
      font-family 'FiraCode', monospace
      font-weight 600
      display none

    .gasArrow
      position absolute
      top 5px
      left -14px
      height 30px
      width 30px
      z-index 200
      border-radius 8px
      cursor pointer
      color var(--ghostE)

      *
        pointer-events none

      .gasArrowInner
        position relative 
        top 1px
        left 4px
        z-index 2
        height 26px
        width 26px
        border-radius 13px
        padding 1px 1px
        box-sizing border-box
        transform rotate(90deg)
      
    .gasArrowRight
      left auto
      right -14px
      transform scaleX(-1)
      cursor pointer

      *
        pointer-events none

    .gasArrow:hover
      background var(--ghostB)

    .gasLevelLabel
      font-size 10px
      display flex
      flex-direction column
      justify-content flex-end
      text-align center
      font-weight 600
      text-transform uppercase
      letter-spacing 1px
      padding-left 1px

    .gasLevelTime
      display flex
      justify-content flex-end
      align-items center
      font-size 10px
      font-weight 600
      color var(--outerspace05)
      margin-left -3px
      letter-spacing 0px
      margin-top 2px
      display none

      .timeUnit
        font-size 7px
        margin-left 1px
        margin-right -2px

    .gasGweiNum
      font-size 20px
      font-family 'FiraCode', monospace
      display flex
      justify-content center
      align-items center

      .gasGweiNumIcon
        margin -1px 4px 0px -12px

    .gasGweiLabel
      position relative
      top -2px
      font-size 8px
      letter-spacing 1px
      padding-left 1px
      font-weight 600
      padding-bottom 2px
      color var(--good)

  .gasItemSmall
    width 30%
    min-width 30%
    max-width 30%
    top -1px
    .gasLevelLabel
      font-size 8px
    .gasGweiNum
      font-size 16px
  
  .gasItemLarge
    width 40%
    min-width 40%
    max-width 40%

    opacity 1
    .gasLevelLabel
      font-size 10px
    .gasGweiNum
      line-height 18px
    .gasGweiLabel
      font-size 10px
      padding 3px 0px 1px 0px 

.sliceGasEstimateBlock
  position relative
  color var(--outerspace)
  display flex
  padding-right 10px

  .gasEstimate
    display flex
    flex-direction column
    justify-content flex-end
    align-items center
    box-sizing border-box
    margin-left 12px

    .gasEstimateRange
      display flex
      justify-content center
      align-items center
      font-size 15px
      text-transform uppercase
      font-weight 600
      font-family 'FiraCode', monospace

      .gasEstimateRangeCurrency
        font-size 10px
        color var(--good)
        font-weight 600

      .gasEstimateRangeDash
        font-size 10px
        padding 0px 6px 0px 3px
        letter-spacing 0px

    .gasEstimateLabel
      display flex
      justify-content center
      align-items center
      font-size 8px
      text-transform uppercase
      font-weight 600
      white-space nowrap
      color var(--good)

  .gasEstimateSymbol
    font-size 9px
    font-weight bold

  .gasEstimate:last-child
    border-bottom none
