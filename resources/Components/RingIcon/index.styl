.ringIcon
  height 36px
  width 36px
  border-radius 22px
  position relative
  -webkit-app-region no-drag
  transition none
  pointer-events auto
  transform translate3d(0, 0, 0)
  border 3px solid var(--moon)
  background var(--ghostB)
  *
    pointer-events none

  .ringIconInner
    position absolute
    top 3px
    right 3px
    bottom 3px
    left 3px
    border-radius 18px
    display flex
    justify-content center
    align-items center
    background var(--moon)
    overflow hidden
    color var(--ghostB)

    img
      object-fit cover
      max-height 30px
      min-height 30px
      max-width 30px
      min-width 30px
      border-radius 14px

.ringIconSmall
  height 22px
  width 22px
  .ringIconInner
    position absolute
    top 2px
    right 2px
    bottom 2px
    left 2px
    img
      object-fit cover
      max-height 18px
      min-height 18px
      max-width 18px
      min-width 18px
      border-radius 9px
