.approveTokenSpend
  position absolute
  top 0px
  left 0px
  right 0px
  bottom 110px
  font-family 'Exo2'

  .approveTokenSpendEdit
    position absolute
    top 0px
    left 0px
    right 0px
    bottom 0px
    display flex
    justify-content center
    align-items center
    flex-direction column

    .approveTokenSpendEditTitle
      font-weight 600
      font-size 12px
      margin-top 4px
      margin-left 2px
      text-transform uppercase
      letter-spacing 2px
      color var(--good)
      margin-bottom 10px

    .approveTokenSpendPresets
      display flex
      justify-content center
      align-items center
      margin-right 10px

      .approveTokenSpendPresetButton
        display flex
        justify-content center
        align-items center
        height 25px
        border-radius 12px
        background var(--ghostE)
        margin 12px 0px 0px 10px
        cursor pointer
        padding 0px 15px 1px 16px
        font-size 12px
        text-transform uppercase
        font-weight 500
        box-sizing border-box
        letter-spacing 1px
        *
          pointer-events none

        .approveTokenSpendPresetButtonTilda
          font-size 15px
          position relative
          right 0px
          top 1px
          font-family FiraCode, monospace
          display none

        .approveTokenSpendPresetButtonInfinity
          position relative
          top 1px
          right 0px

      .approveTokenSpendPresetButtonSelected
        color var(--good)

  .approveTokenSpendDescription
    position absolute
    top 0px
    left 0px
    right 0px
    bottom 0px
    display flex
    justify-content center
    align-items center
    flex-direction column

    .approveTokenSpendContract
      font-size 12px
      font-weight 400
      text-transform uppercase
      line-height 25px
      letter-spacing 1px
      margin 0px 2px 2px 2px

    .approveTokenSpendContractAddress
      font-size 20px
      font-family FiraCode, monospace
      font-weight 400
      display flex
      justify-content center
      align-items center
      height 28px

      svg
        padding 5px

      .approveTokenSpendContractAddressFull
        font-size 13px
        display none

    .approveTokenSpendContractAddress:hover
      .approveTokenSpendContractAddressLarge
        display none
      .approveTokenSpendContractAddressFull
        display block

      
    .approveTokenSpendSub
      font-size 12px
      font-weight 500
      text-transform uppercase
      letter-spacing 1px
      margin 10px

    .approveTokenSpendToken
      font-size 18px
      height 30px
      display flex
      justify-content center
      align-items center
      flex-direction column
      font-weight 600
      letter-spacing 3px
      background var(--ghostB)
      width calc(100% - 10px)
      padding 0px 20px 2px 22px
      box-sizing border-box
      border-radius 15px
      margin-top 4px
      text-transform uppercase
      // color var(--moon)

    .approveTokenSpendTokenName
      font-weight 600
      font-size 12px
      margin-top 1px
      margin-left 1px
      text-transform uppercase
      letter-spacing 2px
      color var(--good)

  .approveTokenSpendAmount
    background var(--ghostB)
    height 40px
    width calc(100% - 10px)
    border-radius 20px
    padding-top 2px
    padding-right 100px
    padding-left 10px
    box-sizing border-box
    position relative
    overflow hidden
    font-weight 400

    input
      background transparent
      outline 0
      border 0
      text-align center
      width 100%
      height 100%
      color var(--outerspace)
      font-size 20px
      font-family FiraCode, monospace

    .approveTokenSpendAmountNoInput
      background transparent
      outline 0
      border 0
      width 100%
      height 100%
      color var(--outerspace)
      font-size 20px
      font-family FiraCode, monospace
      display flex
      justify-content center
      align-items center
      cursor pointer
      *
        pointer-events none

      .approveTokenSpendAmountNoInputSymbol
        font-family 'Exo2'
        text-transform uppercase
        font-size 14px
        line-height 8px
        position relative
        top -1px
        left 4px
        letter-spacing 1px
        color var(--moon)

    .approveTokenSpendSymbol
      position absolute
      top 0
      right 0
      bottom 0
      width 95px
      background var(--ghostD)
      display flex
      justify-content center
      align-items center
      border-radius 6px
      font-size 15px
      font-weight 600
      box-sizing border-box
      text-transform uppercase
