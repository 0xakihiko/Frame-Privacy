.sliceContainer
  background var(--ghostZ08)
  position relative
  margin 3px 7px 18px 7px
  border-radius 12px
  padding 4px 0px 4px 0px
  font-size 14px
  font-weight 300

  .sliceContainerClose
    cursor pointer
    height 16px
    display flex
    justify-content center
    align-items center
    border-radius 8px
    color black
    div
      pointer-events none
      position relative
      margin 0px 18px
      top 2px
    

  .sliceContainerClose:hover
    color var(--white)

  .sliceTile
    cursor pointer
    display flex
    justify-content space-between
    align-items center
    transition var(--standard)
    transform translateZ(0)
    margin 4px 4px 0px 4px
    transform scale(1)
    background var(--ghostA)
    position relative
    border-radius 8px
    height 33px
    box-sizing border-box
    *
      pointer-events none

    .sliceTileOrigin
      padding 0px 32px
      color var(--outerspace)

    .sliceTileConnectionName
      padding 0px 32px
      color var(--outerspace)
      text-transform uppercase
      font-size 11px
      font-weight 400
      letter-spacing 2px

    .sliceTileBlock
      display flex
      justify-conent center
      align-items center
      padding-right 12px
      font-family FiraCode, monospace
      font-size 12px
      position relative
      top 1px

      div
        position relative
        top 0px
        left -8px

    .sliceTileIndicator
      color var(--outerspace)
      cursor pointer
      position absolute 
      top 50%
      margin-top -2px
      left 13px
      bottom 0px
      width 5px
      height 5px
      border-radius 3px
      display flex
      justify-content center
      align-items center
      border-radius 12px
      background var(--good)
      *
        pointer-events none

    .sliceTileIndicatorActive
      background var(--goodHighlighter)
      box-shadow 0px 0px 4px var(--goodHighlight)

    .sliceTileIndicatorLarge
      color var(--outerspace)
      cursor pointer
      position absolute 
      top 50%
      margin-top -4px
      left 12px
      bottom 0px
      width 9px
      height 9px
      border-radius 3px
      display flex
      justify-content center
      align-items center
      border-radius 12px
      background var(--good)
      *
        pointer-events none

    .sliceTileChangeChain
      color var(--outerspace)
      cursor pointer
      position absolute 
      top 0px
      right 0px
      bottom 0px
      width 41px
      display flex
      justify-content center
      align-items center
      border-radius 12px
      *
        pointer-events none

    .sliceTileChangeChain:hover
      background var(--ghostB)

    .sliceTileChangeConnected
      background var(--good)

  .sliceTile:first-child
    margin 0px 4px 0px 4px

  .sliceTileHighlight
    background var(--ghostB)

.sliceContainer:last-child
  margin 0px 8px 4px 8px

.connectionTitle
  justify-content space-between
  height 26px
