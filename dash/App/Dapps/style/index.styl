.sliceTileUsage
  width 100%
  height 100%
  display flex
  font-size 10px
  justify-content center
  align-items center
  text-transform uppercase
  font-weight 400

  .sliceTileUsageCount
    font-size 17px
    margin-right 7px
    border-radius 16px
    display flex
    justify-content center
    align-items center

.sliceOrigin
  cursor pointer
  display flex
  justify-content space-between
  align-items center
  position relative
  height 32px
  box-sizing border-box
  font-size 12px
  font-weight 300
  border-radius 8px
  *
    pointer-events none

  .sliceOriginTile
    padding 0px 34px 2px 34px
    color var(--outerspace)
    font-weight 500

.sliceOrigin:hover
  background var(--ghostB)

.viewAllOrigin
  display flex
  justify-content center
  align-items center
  height 10px
  padding 5px
  text-transform uppercase
  font-size 10px
  font-weight 600
  color var(--good)
  cursor pointer
  *
    pointer-events none

