.originSwapChainList
  background var(--ghostZ)
  border-radius 12px

  .originChainItem
    display flex
    justify-content center
    align-items center
    height 64px
    cursor pointer
    border-bottom 1px solid var(--ghostX)

  .originChainItem:hover
    background var(--ghostA)

  .originChainItem:last-child
